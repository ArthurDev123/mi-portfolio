<style>
  #first {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: clamp(2rem, 5vw, 70px);
    width: 100%;
    gap: clamp(2rem, 5vw, 3rem);
    position: relative;
  }

  #hero {
    margin: 0;
    padding: clamp(1rem, 3vw, 2rem);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    max-width: 100%;
    flex: 0 1 auto;
  }

  #hero h2 {
    margin: 0;
    font-size: clamp(1rem, 3vw, 1.4rem);
    font-weight: bold;
  }

  h1 {
    margin: clamp(0.5rem, 2vw, 1rem) 0;
    font-size: clamp(2rem, 10vw, 7.5rem);
    background: linear-gradient(270deg, #ff6ec4, #7873f5, #00f0ff, #ff6ec4);
    background-size: 800% 800%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradientMove 8s ease infinite;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  #hero p {
    margin: clamp(1rem, 2vw, 2rem) 0 0 0;
    font-weight: bold;
    font-size: clamp(1rem, 3vw, 1.8rem);
  }

  p {
    margin-top: clamp(2rem, 3vw, 50px);
    font-size: clamp(1rem, 2vw, 1.3rem);
  }

  #third {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    padding: clamp(1rem, 3vw, 2rem);
  }

  #third h2 {
    margin: 0;
    font-size: clamp(1.4rem, 5vw, 2.2rem);
  }

  #third h3 {
    margin: clamp(0.5rem, 1vw, 1rem) 0 0 0;
    font-weight: 400;
    color: var(--text-secondary);
    font-size: clamp(0.75rem, 2vw, 1rem);
  }

  #more-projects {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    padding: clamp(1rem, 3vw, 2rem);
    margin-top: clamp(1rem, 2vw, 2rem);
  }

  #more-projects h2 {
    margin: 0;
    font-size: clamp(1.4rem, 5vw, 2.2rem);
  }

  #more-projects h3 {
    margin: clamp(0.5rem, 1vw, 1rem) 0 0 0;
    font-weight: 400;
    color: var(--text-secondary);
    font-size: clamp(0.75rem, 2vw, 1rem);
  }

  #skills-section-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    padding: clamp(1rem, 3vw, 2rem);
    margin-top: clamp(1rem, 2vw, 2rem);
  }

  #skills-section-header h2 {
    margin: 0;
    font-size: clamp(1.4rem, 5vw, 2.2rem);
  }

  #skills-section-header h3 {
    margin: clamp(0.5rem, 1vw, 1rem) 0 0 0;
    font-weight: 400;
    color: var(--text-secondary);
    font-size: clamp(0.75rem, 2vw, 1rem);
  }

  #tech-section-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    padding: clamp(1rem, 3vw, 2rem);
    margin-top: clamp(1rem, 2vw, 2rem);
  }

  #tech-section-header h2 {
    margin: 0;
    font-size: clamp(1.4rem, 5vw, 2.2rem);
  }

  #tech-section-header h3 {
    margin: clamp(0.5rem, 1vw, 1rem) 0 0 0;
    font-weight: 400;
    color: var(--text-secondary);
    font-size: clamp(0.75rem, 2vw, 1rem);
  }

  @keyframes gradientMove {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  /* Tablet */
  @media (max-width: 768px) {
    #first {
      margin-top: clamp(1rem, 3vw, 10px);
      flex-direction: column;
      gap: clamp(1rem, 2vw, 2rem);
    }

    #hero {
      padding: clamp(0.5rem, 2vw, 1rem);
    }

    h1 {
      margin: clamp(0.3rem, 1.5vw, 0.5rem) 0;
    }

    #hero p {
      margin-top: clamp(0.5rem, 1.5vw, 1rem);
    }
  }

  /* Mobile */
  @media (max-width: 480px) {
    
    #first {
      zoom: 1.3;
      margin-top: clamp(0.5rem, 2vw, 5px);
      gap: clamp(0.8rem, 1.5vw, 1.2rem);
    }

    #hero {
      
      margin-top: 70px;
      padding: clamp(0.3rem, 1vw, 0.5rem);
    }

    #third {
      padding: clamp(0.5rem, 1.5vw, 1rem);
    }
  }
</style>
