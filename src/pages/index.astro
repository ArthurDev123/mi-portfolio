---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Background from "../components/Background.astro";
import HorizontalLine from "../components/HorizontalLine.astro";
import SectionSocialIcons from "../components/SectionSocialIcona.astro";
import SectionButtonsFirst from "../components/SectionButtonsFirst.astro";
import About from "../components/About.astro";
import Projects from "../components/Projects.astro";
import ProjectsInverse from "../components/Projects_Inverse.astro";
import '../styles/global.css'
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <title>Mi Portfolio</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <Navbar />
    <main>
      <section id="first">
        <section id="hero">
          <h2>Hola, soy</h2>
          <h1 color="">Arturo Pastor</h1>
          <p>Software Engineer</p>
          <SectionButtonsFirst />
        </section>
        <SectionSocialIcons />
      </section>
      <HorizontalLine />
      <About />

      <HorizontalLine />
      <div id="third">
        <h2>Mis proyectos</h2>
        <h3>Algunos de mis proyectos</h3>
      </div>

      <Projects
        title="Clikk - una aplicación para gestionar grupos de amigos "
        img="/images/Diseño sin título.png"
        description={`Clikk es una aplicación social para conocer personas y crear grupos de amigos con intereses en común. Incluye chat en tiempo real mediante WebSockets, notificaciones por correo electrónico y un sistema de suscripción premium.`}
        tecno={["HTML", "CSS", "JavaScript", "Nodejs", "Express", "MongoDB"]}
        github="https://github.com/ArthurDev123/Clikk-frontend"
        link="https://clikkofficial.netlify.app/"
      />

      <ProjectsInverse />
      <Projects
        title="Mi Portfolio "
        img="/images/miportfolio.png"
        description={`Portfolio personal desarrollado con Astro para lograr un sitio rápido y optimizado.
Incluye una landing page responsive, navegación sencilla y componentes reutilizables.
El diseño está hecho con HTML, CSS y Flexbox, acompañado de efectos visuales como gradientes animados y un fondo dinámico de estrellas.
También integré iconos dinámicos y secciones modulares para mostrar mis proyectos de forma clara y escalable.`}
        tecno={["HTML", "CSS", "JavaScript", "Astro", "SCSS"]}
        github="https://github.com/ArthurDev123/mi-portfolio"
        link="https://clikkofficial.netlify.app/"
      />
    </main>
  </body>
</html>

<section id="third"></section>
<section id="contact"></section>

<Background />

<style>
  #first {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: clamp(2rem, 5vw, 70px);
    width: 100%;
    gap: clamp(2rem, 5vw, 3rem);
    position: relative;
  }

  #hero {
    margin: 0;
    padding: clamp(1rem, 3vw, 2rem);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    max-width: 100%;
    flex: 0 1 auto;
  }

  #hero h2 {
    margin: 0;
    font-size: clamp(1rem, 3vw, 1.4rem);
    font-weight: bold;
  }

  h1 {
    margin: clamp(0.5rem, 2vw, 1rem) 0;
    font-size: clamp(2rem, 10vw, 7.5rem);
    background: linear-gradient(270deg, #ff6ec4, #7873f5, #00f0ff, #ff6ec4);
    background-size: 800% 800%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradientMove 8s ease infinite;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  #hero p {
    margin: clamp(1rem, 2vw, 2rem) 0 0 0;
    font-weight: bold;
    font-size: clamp(1rem, 3vw, 1.8rem);
  }

  p {
    margin-top: clamp(2rem, 3vw, 50px);
    font-size: clamp(1rem, 2vw, 1.3rem);
  }

  #third {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    padding: clamp(1rem, 3vw, 2rem);
  }

  #third h2 {
    margin: 0;
    font-size: clamp(1.4rem, 5vw, 2.2rem);
  }

  #third h3 {
    margin: clamp(0.5rem, 1vw, 1rem) 0 0 0;
    font-weight: 400;
    color: #d8d8d8;
    font-size: clamp(0.75rem, 2vw, 1rem);
  }

  @keyframes gradientMove {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  /* Tablet */
  @media (max-width: 768px) {
    #first {
      margin-top: clamp(1rem, 3vw, 10px);
      flex-direction: column;
      gap: clamp(1rem, 2vw, 2rem);
    }

    #hero {
      padding: clamp(0.5rem, 2vw, 1rem);
    }

    h1 {
      margin: clamp(0.3rem, 1.5vw, 0.5rem) 0;
    }

    #hero p {
      margin-top: clamp(0.5rem, 1.5vw, 1rem);
    }
  }

  /* Mobile */
  @media (max-width: 480px) {
    #first {
      margin-top: clamp(0.5rem, 2vw, 5px);
      gap: clamp(0.8rem, 1.5vw, 1.2rem);
    }

    h1 {
      font-size: clamp(1.5rem, 8vw, 3rem);
    }

    #hero {
      padding: clamp(0.3rem, 1vw, 0.5rem);
    }

    #third {
      padding: clamp(0.5rem, 1.5vw, 1rem);
    }
  }
</style>
