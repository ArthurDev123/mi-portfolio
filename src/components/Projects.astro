---
const { title, img, description, tecno = [], github } = Astro.props;
---

<section id="projects">
  <section id="project">
    <div id="info-project">
      <h2>{title}</h2>
      <h3>{description}</h3>
      <div id="tecnologia">
        {tecno.map((t: unknown) => <h3>{t}</h3>)}
      </div>
      <div id="iconos">
        <a class="fa-brands fa-github" href={github} target="_blank"
          ><svg
            xmlns="http://www.w3.org/2000/svg"
            width="40"
            height="40"
            fill="currentColor"
            class="bi bi-github"
            viewBox="0 0 16 16"
          >
            <path
              d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27s1.36.09 2 .27c1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0 0 16 8c0-4.42-3.58-8-8-8"
            ></path>
          </svg></a
        >
        <a href="https://clikkofficial.netlify.app/" target="_blank"
          ><img
            width="50"
            height="50"
            src="/images/captive_portal_40dp_FFFFFF_FILL0_wght400_GRAD0_opsz40.svg"
            alt="internet--v1"
          /></a
        >
      </div>
    </div>
    <div id="img-project">
      <img src={img} alt="" />
    </div>
  </section>
</section>

<style>
  #projects {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding: clamp(0.5rem, 2vw, 1rem);
  }

  #project {
    margin-top: clamp(2rem, 5vw, 60px);
    padding: clamp(1rem, 3vw, 40px);
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    gap: clamp(1rem, 3vw, 20px);
    flex-wrap: wrap;
    width: 100%;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }

  #info-project {
    max-width: 100%;
    min-width: clamp(250px, 80vw, 550px);
    overflow-wrap: break-word;
  }

  #info-project h2 {
    font-size: clamp(1.05rem, 3vw, 1.95rem);
    margin: 0 0 clamp(0.5rem, 1vw, 1rem) 0;
  }

  #info-project h3 {
    background-color: #604a84;
    padding: clamp(0.8rem, 2vw, 20px);
    color: white;
    font-weight: bold;
    font-size: clamp(0.6rem, 1.5vw, 0.9rem);
    border-radius: 15px;
    box-shadow: 0 5px 5px -2px rgba(0, 0, 0, 0.4);
    margin-bottom: clamp(0.5rem, 1vw, 1rem);
  }

  #img-project {
    width: clamp(150px, 67.5vw, 750px);
    flex: 1;
    min-width: clamp(150px, 67.5vw, 450px);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #img-project img {
    max-width: 100%;
    width: 100%;
    height: auto;
    display: block;
    object-fit: contain;
    border-radius: 10px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }

  #tecnologia,
  #iconos {
    display: flex;
    flex-direction: row;
    gap: clamp(0.5rem, 2vw, 15px);
    align-items: center;
    flex-wrap: wrap;
    margin-top: clamp(0.5rem, 1vw, 1rem);
  }

  #tecnologia h3 {
    background-color: #6b7280;
    padding: clamp(3px, 1vw, 6px);
    font-size: clamp(0.75rem, 1.5vw, 1rem);
    border-radius: 5px;
    margin: 0;
  }

  a {
    color: white;
    display: flex;
    align-items: center;
    transition: transform 0.3s ease;
  }

  a:hover {
    transform: scale(1.1);
  }

  svg,
  img {
    width: clamp(30px, 5vw, 40px);
    height: clamp(30px, 5vw, 40px);
  }

  /* Tablet */
  @media (max-width: 768px) {
    #project {
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: clamp(0.5rem, 2vw, 1rem);
      gap: clamp(0.8rem, 2vw, 1.5rem);
    }

    #info-project {
      max-width: 100%;
      min-width: auto;
    }

    #info-project h2 {
      font-size: clamp(1.2rem, 3vw, 1.5rem);
      text-align: center;
    }

    #info-project h3 {
      font-size: clamp(0.7rem, 1.8vw, 0.95rem);
      padding: clamp(0.6rem, 1.5vw, 1rem);
    }

    #img-project {
      width: 100%;
      max-width: 500px;
      height: auto;
    }

    #tecnologia,
    #iconos {
      gap: clamp(0.3rem, 1.5vw, 8px);
      justify-content: center;
    }

    #tecnologia h3 {
      padding: clamp(2px, 0.8vw, 4.5px);
      font-size: clamp(0.65rem, 1.3vw, 0.8rem);
    }

    svg,
    img {
      width: clamp(25px, 4vw, 35px);
      height: clamp(25px, 4vw, 35px);
    }
  }

  /* Mobile */
  @media (max-width: 480px) {
    #projects {
      padding: clamp(0.3rem, 1.5vw, 0.5rem);
    }

    #project {
      padding: clamp(0.3rem, 1vw, 0.8rem);
      gap: clamp(0.5rem, 1.5vw, 1rem);
      margin-top: clamp(1rem, 3vw, 30px);
    }

    #info-project h2 {
      font-size: clamp(1rem, 3vw, 1.3rem);
    }

    #info-project h3 {
      font-size: clamp(0.65rem, 1.5vw, 0.8rem);
      padding: clamp(0.5rem, 1vw, 0.8rem);
    }

    #img-project {
      width: 100%;
      max-width: 90vw;
    }

    #tecnologia h3 {
      font-size: clamp(0.6rem, 1.2vw, 0.75rem);
      padding: clamp(2px, 0.7vw, 3px);
    }

    svg,
    img {
      width: clamp(20px, 3vw, 30px);
      height: clamp(20px, 3vw, 30px);
    }
  }
</style>
