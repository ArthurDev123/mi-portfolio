---
// src/components/Contact.astro
import HorizontalLine from "./HorizontalLine.astro";
import '../styles/global.css';

// Props del componente
export interface Props {
  title?: string;
  subtitle?: string;
  email?: string;
  github?: string;
  linkedin?: string;
  twitter?: string;
}

const {
  title = "Contacto",
  subtitle = "¿Tienes un proyecto en mente? ¡Hablemos!",
  email = "pastorarturo2005@gmail.com",
  github = "https://github.com/ArthurDev123",
  linkedin = "https://linkedin.com/in/arturo-pastor",
  twitter = "https://twitter.com/arturo_pastor",
} = Astro.props;
---

<HorizontalLine />
<section id="contact" class="contact-section">
  <div class="contact-header">
    <h2>{title}</h2>
    <h3>{subtitle}</h3>
  </div>

  <div class="contact-content">
    <div class="contact-info">
      <!-- ... (mantén tu sección de contact-info) ... -->
    </div>

    <div class="contact-form">
      <h4>Envíame un mensaje</h4>
      
      <!-- FORMULARIO CORREGIDO SEGÚN DOCUMENTACIÓN DE NETLIFY -->
      <form 
        name="contact"
        method="POST"
        data-netlify="true"
        netlify-honeypot="bot-field"
        action="/success"
      >
        <!-- Campo hidden que Netlify inyecta automáticamente -->
        <input type="hidden" name="form-name" value="contact" />
        
        <!-- Campo honeypot para spam -->
        <p style="display: none;">
          <label>No llenar este campo si eres humano: <input name="bot-field" /></label>
        </p>
        
        <div class="form-group">
          <label for="name">Nombre *</label>
          <input type="text" id="name" name="name" required placeholder="Tu nombre" />
        </div>
        
        <div class="form-group">
          <label for="email">Correo Electrónico *</label>
          <input type="email" id="email" name="email" required placeholder="tu@email.com" />
        </div>
        
        <div class="form-group">
          <label for="subject">Asunto *</label>
          <input type="text" id="subject" name="subject" required placeholder="¿En qué puedo ayudarte?" />
        </div>
        
        <div class="form-group">
          <label for="message">Mensaje *</label>
          <textarea id="message" name="message" rows="5" required placeholder="Describe tu proyecto o consulta..."></textarea>
        </div>
        
        <button type="submit" class="submit-btn">
          <span id="submitText">Enviar Mensaje</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="22" y1="2" x2="11" y2="13"></line>
            <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
          </svg>
        </button>
        
        <p class="form-note">* Te responderé a <strong>{email}</strong> lo antes posible.</p>
      </form>
      
      <!-- Mensaje de éxito (se muestra dinámicamente) -->
      <div id="successMessage" class="success-message" style="display: none;">
        <div class="success-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
            <polyline points="22 4 12 14.01 9 11.01"></polyline>
          </svg>
        </div>
        <h4>¡Mensaje enviado con éxito!</h4>
        <p>Gracias por contactarme. Te responderé a <strong>{email}</strong> lo antes posible.</p>
        <button id="newMessageBtn" class="new-message-btn">Enviar otro mensaje</button>
      </div>
    </div>
  </div>
</section>

<style>
  /* Mantén todos tus estilos CSS iguales */
  .contact-section {
    width: 100%;
    padding: clamp(2rem, 5vw, 4rem) clamp(1rem, 3vw, 2rem);
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    z-index: 1;
  }

  .contact-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    margin-bottom: clamp(2rem, 4vw, 3rem);
    text-align: center;
  }

  .contact-header h2 {
    margin: 0;
    font-size: clamp(1.6rem, 5vw, 2.5rem);
    font-weight: bold;
    background: linear-gradient(270deg, #ff6ec4, #7873f5, #00f0ff);
    background-size: 400% 400%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradientMove 6s ease infinite;
  }

  .contact-header h3 {
    margin: clamp(0.5rem, 1vw, 1rem) 0 0 0;
    font-weight: 400;
    color: var(--text-secondary, #888);
    font-size: clamp(0.9rem, 2vw, 1.2rem);
    max-width: 600px;
  }

  .contact-content {
    width: 100%;
    max-width: 1200px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: clamp(2rem, 4vw, 4rem);
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .contact-card {
    display: flex;
    align-items: center;
    gap: 1.2rem;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .contact-card:hover {
    background: rgba(120, 115, 245, 0.1);
    border-color: rgba(120, 115, 245, 0.3);
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(120, 115, 245, 0.15);
  }

  .contact-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    border-radius: 10px;
    background: linear-gradient(135deg, rgba(120, 115, 245, 0.2), rgba(255, 110, 196, 0.2));
    flex-shrink: 0;
  }

  .contact-icon svg {
    color: #7873f5;
  }

  .contact-details h4 {
    margin: 0 0 0.3rem 0;
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-primary, #fff);
  }

  .contact-link {
    color: var(--text-secondary, #aaa);
    text-decoration: none;
    font-size: 1rem;
    transition: color 0.3s ease;
  }

  .contact-link:hover {
    color: #7873f5;
    text-decoration: underline;
  }

  .contact-form {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    padding: 2rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .contact-form h4 {
    margin: 0 0 1.5rem 0;
    font-size: 1.4rem;
    font-weight: 600;
    color: var(--text-primary, #fff);
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-size: 0.95rem;
    color: var(--text-secondary, #aaa);
    font-weight: 500;
  }

  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 0.9rem 1.2rem;
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    background: rgba(255, 255, 255, 0.05);
    color: var(--text-primary, #fff);
    font-size: 1rem;
    transition: all 0.3s ease;
    font-family: inherit;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #7873f5;
    box-shadow: 0 0 0 3px rgba(120, 115, 245, 0.2);
    background: rgba(255, 255, 255, 0.08);
  }

  .submit-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.8rem;
    width: 100%;
    padding: 1rem 1.5rem;
    background: linear-gradient(90deg, #7873f5, #ff6ec4);
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 1rem;
  }

  .submit-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(120, 115, 245, 0.4);
    background: linear-gradient(90deg, #8a85ff, #ff7ecf);
  }

  .form-note {
    margin-top: 1rem;
    font-size: 0.85rem;
    color: var(--text-secondary, #888);
    text-align: center;
  }

  .form-note strong {
    color: #7873f5;
  }

  /* Mensaje de éxito */
  .success-message {
    text-align: center;
    padding: 2rem;
    background: rgba(76, 175, 80, 0.1);
    border-radius: 12px;
    border: 1px solid rgba(76, 175, 80, 0.3);
    margin-top: 2rem;
    animation: fadeIn 0.5s ease;
  }

  .success-icon svg {
    color: #4CAF50;
  }

  .success-message h4 {
    color: var(--text-primary);
    margin-bottom: 0.5rem;
    font-size: 1.3rem;
  }

  .success-message p {
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
  }

  .new-message-btn {
    background: transparent;
    color: #7873f5;
    border: 1px solid #7873f5;
    padding: 0.7rem 1.5rem;
    border-radius: 6px;
    cursor: pointer;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .new-message-btn:hover {
    background: rgba(120, 115, 245, 0.1);
  }

  @keyframes gradientMove {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  /* Spinner de carga */
  .spinner {
    display: inline-block;
    width: 1em;
    height: 1em;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    border-top-color: white;
    animation: spin 0.8s linear infinite;
    margin-left: 0.5em;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .contact-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
    
    .contact-card {
      padding: 1.2rem;
    }
  }

  @media (max-width: 600px) {
    .contact-section {
      padding: clamp(1.5rem, 4vw, 2.5rem) clamp(0.8rem, 2vw, 1.2rem);
    }
    
    .contact-header h2 {
      font-size: clamp(1.4rem, 4vw, 2rem);
    }
    
    .contact-header h3 {
      font-size: clamp(0.8rem, 1.8vw, 1rem);
    }
    
    .contact-form {
      padding: 1.5rem;
    }
    
    .contact-card {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
      padding: 1.5rem 1rem;
    }
    
    .contact-icon {
      width: 45px;
      height: 45px;
    }
    
    .submit-btn {
      padding: 0.9rem 1.2rem;
      font-size: 1rem;
    }
  }
</style>

<script>
  // SCRIPT CORREGIDO - Sin errores TypeScript
  document.addEventListener('DOMContentLoaded', () => {
    // Usar type casting explícito para evitar errores
    const contactForm = document.querySelector('form[name="contact"]') as HTMLFormElement | null;
    const submitBtn = document.querySelector('.submit-btn') as HTMLButtonElement | null;
    const submitText = document.getElementById('submitText') as HTMLSpanElement | null;
    const successMessage = document.getElementById('successMessage') as HTMLDivElement | null;
    const newMessageBtn = document.getElementById('newMessageBtn') as HTMLButtonElement | null;
    
    if (contactForm) {
      // Prevenir envío tradicional para usar AJAX
      contactForm.addEventListener('submit', async (event) => {
        event.preventDefault();
        
        // Mostrar estado de carga
        if (submitBtn && submitText) {
          submitBtn.disabled = true;
          submitText.innerHTML = 'Enviando <span class="spinner"></span>';
        }
        
        try {
          // Preparar datos del formulario
          const formData = new FormData(contactForm);
          
          // Convertir FormData a URLSearchParams (requerido por Netlify)
          const params = new URLSearchParams();
          formData.forEach((value, key) => {
            // Solo agregar valores que sean strings
            if (typeof value === 'string') {
              params.append(key, value);
            }
          });
          
          // Asegurar que form-name esté presente
          if (!params.has('form-name')) {
            params.append('form-name', 'contact');
          }
          
          // Enviar a Netlify usando fetch API
          const response = await fetch('/', {
            method: 'POST',
            headers: { 
              'Content-Type': 'application/x-www-form-urlencoded' 
            },
            body: params.toString()
          });
          
          if (response.ok) {
            // Mostrar mensaje de éxito localmente
            contactForm.style.display = 'none';
            if (successMessage) {
              successMessage.style.display = 'block';
            }
            
            console.log('Form successfully submitted to Netlify');
          } else {
            throw new Error('Error en el envío a Netlify');
          }
        } catch (error) {
          console.error('Error:', error);
          
          // Fallback: enviar el formulario tradicionalmente
          alert('Error al enviar el mensaje. Redirigiendo a página de envío...');
          contactForm.submit();
        } finally {
          // Restaurar botón
          if (submitBtn && submitText) {
            submitBtn.disabled = false;
            submitText.textContent = 'Enviar Mensaje';
          }
        }
      });
    }
    
    // Botón para nuevo mensaje
    if (newMessageBtn && successMessage && contactForm) {
      newMessageBtn.addEventListener('click', () => {
        successMessage.style.display = 'none';
        contactForm.style.display = 'block';
      });
    }
  });
</script>